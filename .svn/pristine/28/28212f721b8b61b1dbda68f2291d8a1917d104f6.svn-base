@import "./reset";
.clearfix() {
    zoom: 1;
    &:before, &:after {
        display: table;
        content: " ";
    }
    &:after {
        clear: both;
    }
}

.g-body {
  position: relative;
  background: #f5f5f5;
}
@boxWidth: 1190px;
.g-box {
  width: @boxWidth;
  height: 100%;
  position: relative;
  margin: 0 auto;
  .clearfix();
}

.o-title {
  margin: 20px 0 20px 0;
  font-size: 30px;
}

.o-url-link {
  font-size: 12px;
}

.o-step {
  margin-top: 10px; 
  width: 900px
}

.o-detail {
  margin: 20px 0 10px 0;
  width: 1190px;
  border: 1px solid #cccccc;
  .clearfix();
  .o-left-box {
    float: left;
    width: 800px;
    border-right: 1px solid #cccccc;
    padding: 20px;
  }
  .o-right-box {
    float: left;
    width: 1190px - 800px - 2px;
    padding: 20px;
  }
}
.time-line {
  margin: 40px 0 0 10px;
  /*纵向时间轴*/
    .time-vertical {
        list-style-type: none;
        border-left: 1px solid #999999;
        padding: 0px;
        height: 400px;
    }

    .time-vertical li {
        height: 100px;
        position: relative;
    }

    .time-vertical li a {
        display: inline-block;
        margin-left: 20px;
        line-height: 22px!important;
        text-decoration: none;
        color: #000;
    }

    .time-vertical li b:before {
        content: '';
        position: absolute;
        top: 0;
        left: -12px;
        width: 22px;
        height: 22px;
        border: 2px solid #cccccc;;
        border-radius: 10px;
        background: #cccccc;
    }

    .time-vertical li span {
        position: absolute;
        color: #fff;
        top: 18px;
        left: -6px;
    }
}
