@boxWidth: 1190px;
.clearfix() {
  zoom: 1;
  &:before, &:after {
      display: table;
      content: " ";
  }
  &:after {
      clear: both;
  }
}

.header-box {
  width: @boxWidth;
  height: 100%;
  position: relative;
  margin: 0 auto;
  .clearfix();
}

.header-topbar {
  @height: 30px;
  z-index: 99;
  height: @height;
  font-size:12px;
  a {
    color: #252525;
  }
  ul > li {
    line-height: @height;
    float: left;
    display: inline-block;

    + li {
      margin-left: 25px;
    }
  }
}

.header-fr {
    float: right;
}
